{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start debug server",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/webapp",
            },
            "command": "bun start",
            "group": "test",
            "isBackground": true,
            "problemMatcher": [
                {
                  "owner": "react",
                  "fileLocation": ["relative", "${workspaceFolder}"],
                  "pattern": [
                    {
                      "regexp": "^(.*):(\\d+):(\\d+)\\s-\\s(.*)$",
                      "file": 1,
                      "line": 2,
                      "column": 3,
                      "message": 4
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting the development server",
                    "endsPattern": "Compiled|Failed to compile."
                  }
                }
              ]
          }
    ]
}